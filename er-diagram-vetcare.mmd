erDiagram
    Clinica ||--o{ Usuario : "possui"
    Clinica ||--o{ Tutor : "possui"
    Clinica ||--o{ Veterinario : "possui"
    Clinica ||--o{ Exame : "realiza"
    Clinica ||--o{ Fatura : "possui"
    Tutor ||--o{ Paciente : "possui"
    Paciente ||--o{ Exame : "realiza"
    Servico ||--o{ Exame : "tipo"
    Veterinario ||--o{ Exame : "solicita"
    Exame ||--|| Laudo : "gera"
    Fatura ||--o{ ItemFatura : "contém"
    Exame ||--o| ItemFatura : "compõe"

    Usuario {
        uuid id PK
        varchar email UK
        varchar senha_hash
        varchar nome
        enum perfil
        varchar crmv
        uuid clinica_id FK
    }

    Clinica {
        uuid id PK
        varchar nome
        varchar cnpj
        text endereco
        varchar telefone
        varchar email
        boolean ativo
    }

    Tutor {
        uuid id PK
        varchar nome
        varchar cpf
        varchar telefone
        varchar email
        uuid clinica_id FK
    }

    Paciente {
        uuid id PK
        varchar nome
        varchar especie
        varchar raca
        enum sexo
        varchar idade
        decimal peso
        uuid tutor_id FK
    }

    Servico {
        uuid id PK
        varchar nome
        varchar categoria
        decimal valor_padrao
        boolean ativo
    }

    Veterinario {
        uuid id PK
        varchar nome
        varchar crmv
        uuid clinica_id FK
    }

    Exame {
        uuid id PK
        varchar numero UK
        uuid paciente_id FK
        uuid servico_id FK
        uuid clinica_id FK
        uuid veterinario_id FK
        date data_registro
        decimal valor
        enum status_laudo
    }

    Laudo {
        uuid id PK
        uuid exame_id FK UK
        text conteudo
        enum status
        timestamp data_liberacao
        varchar medico_responsavel
    }

    Fatura {
        uuid id PK
        uuid clinica_id FK
        int mes_ref
        int ano_ref
        decimal valor_total
        int quantidade_exames
        enum status
        timestamp data_pagamento
    }

    ItemFatura {
        uuid id PK
        uuid fatura_id FK
        uuid exame_id FK
        decimal valor
    }
